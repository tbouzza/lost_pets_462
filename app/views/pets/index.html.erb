<div class="container">
  <h1>All the found pets</h1>
  <div class="row">
    <div class="col-6">
      <ol>
        <% @pets.each do |pet| %>
          <li class="mb-3">
            <%= link_to pet.name, pet_path(pet) %> -
            <%= link_to 'delete', pet_path(pet), method: :delete, class: 'btn btn-danger btn-xs' %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
  <%= link_to 'Add a pet', new_pet_path, class: 'btn btn-primary' %>
</div>



