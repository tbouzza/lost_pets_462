<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h1><%= @pet.name %> - <%= @pet.species %></h1>

      <h2>Found at <%= @pet.address %> on <%= @pet.found_on.strftime('%A, %b %d') %></h2>

      <%= link_to 'Edit the pet', edit_pet_path(@pet), class: 'btn btn-warning' %>
    </div>
  </div>
</div>

